@model List<Book_store.Domain.Models.Book>

<div class="m-3 d-flex justify-content-between align-items-center">
    <h1 class="mb-0">Books</h1>
    <a class="btn btn-success" asp-controller="Book" asp-action="Create">Add new book</a>
</div>

<div class="container">

    @for(int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];
        if (i % 3 == 0)
        {
            @:<div class="row">
        }
        <div class="col-3 m-4">
            <div class="card" style="width: 18rem; height: 35rem">
                <img class="card-img-top" src="@item.BookImage" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                     <p class="card-text">
                        Written by: 
                        @for(int j = 0; j < @item.Authors.Count; j++)
                        {
                            var author = @item.Authors.ToList()[j];
                            <span>
                                @author.Name @author.Surname (@author.Origin)
                                @if (j < item.Authors.Count - 1)
                                {
                                    @:<br />
                                }
                            </span>
                        }
                        <br />Rating: @item.Rating
                    </p>
                    <h6>Price: @item.Price ден.</h6>
                </div>
                <div class="card-footer">
                    <a asp-controller="Book" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                    <a asp-controller="Book" asp-action="AddToCart" asp-route-id="@item.Id" class="btn btn-info">Add to Cart</a>
                    <a asp-controller="Book" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>

                </div>
            </div>
        </div>

        if (i % 3 == 2)
        {
            @:</div>
        }
    }
</div>
