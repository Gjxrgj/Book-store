@model Book_store.Domain.Models.Publisher
@using Book_store.Domain.Models

<!-- Custom CSS for Styling the Form -->
<style>
    body {
        background: linear-gradient(135deg, white);
        height: 100vh;
        margin: 0;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .card {
        background: #ffffff;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 2px 12px 16px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        width: 100%;
    }

    .form-control {
        border-radius: 10px;
        box-shadow: none;
        border: 1px solid #ccc;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        border-radius: 20px;
        color: #fff;
        width: 100%;
        padding: 10px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .back-link {
        display: block;
        text-align: center;
        margin-top: 20px;
        color: #007bff;
        text-decoration: none;
    }

        .back-link:hover {
            color: #0056b3;
            text-decoration: underline;
        }

    .text-danger {
        font-size: 0.875em;
    }
</style>

<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card p-4">
        <h2 class="text-center mb-4">Create Publisher</h2>

        <form asp-action="Create">
            <!-- Validation Summary for Model Errors -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Name Input -->
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Publisher Image Input -->
            <div class="form-group mb-3">
                <label asp-for="PublisherImage" class="control-label"></label>
                <input asp-for="PublisherImage" class="form-control" />
                <span asp-validation-for="PublisherImage" class="text-danger"></span>
            </div>

            <!-- Books Selection -->
            <div class="form-group mb-3">
                <label asp-for="Books" class="control-label"></label>
                <select name="SelectedBookIds" class="form-control" multiple="multiple">
                    @foreach (var book in ViewBag.Books as IEnumerable<Book>)
                    {
                        <option value="@book.Id">@book.Title</option>
                    }
                </select>
                <span asp-validation-for="Books" class="text-danger"></span>
            </div>

            <!-- Description Input -->
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group text-center">
                <input type="submit" value="Create" class="btn-primary" />
            </div>
        </form>

        <!-- Back to List Link -->
        <a asp-action="Index" class="back-link">Back to List</a>
    </div>
</div>

<!-- Scripts for Validation -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
