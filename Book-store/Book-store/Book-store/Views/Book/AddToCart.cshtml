@model Book_store.Domain.Models.BookInShoppingCart

<style>
    body {
        background: linear-gradient(135deg, white);
        height: 100vh;
        margin: 0;
        align-items: center;
        justify-content: center;
    }

    .card {
        background: #ffffff;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 2px 12px 16px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        width: 100%;
    }

    .form-control {
        border-radius: 10px;
        box-shadow: none;
        border: 1px solid #ccc;
    }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
        border-radius: 20px;
        color: #fff;
        width: 100%;
        padding: 10px;
    }

        .btn-info:hover {
            background-color: #138496;
            border-color: #117a8b;
        }

    .back-link {
        display: block;
        text-align: center;
        margin-top: 20px;
        color: #007bff;
        text-decoration: none;
    }

        .back-link:hover {
            color: #0056b3;
            text-decoration: underline;
        }
</style>

<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card p-4">
        <h2 class="text-center mb-4">Add product to Shopping cart</h2>

        <form asp-action="AddToCartConfirmed">
            <input type="hidden" asp-for="BookId" />

            <div class="form-group mb-3">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" class="form-control" />
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Add To Cart" class="btn-info" />
            </div>
        </form>

        <a asp-action="Index" class="back-link">Back to List</a>
    </div>
</div>
